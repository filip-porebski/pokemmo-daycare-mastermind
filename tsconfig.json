{
    "compilerOptions": {
        "target": "ES2019",                    // Keep as ES2019 to ensure compatibility with Node.js 12
        "module": "commonjs",                  // Changed from 'esnext' to 'commonjs'
        "jsx": "preserve",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2019", "dom", "dom.iterable"], // Removed 'esnext' to focus on ES2019 features
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": "src",
        "paths": {
            "@pokemmo/*": ["*"]
        }
    },
    "include": ["src"]
}
